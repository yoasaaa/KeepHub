# Application Environment
NODE_ENV=development

# Server Configuration
PORT=5100

# Database Configuration
# Local MongoDB: mongodb://localhost:27017/keephub
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/keephub
MONGO_URL=mongodb://localhost:27017/keephub

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=1d

# Cloudinary Configuration (Optional - for avatar uploads)
CLOUDINARY_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
